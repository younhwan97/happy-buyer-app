<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Basic Theme -->
    <style name="Theme.HappyBuyer" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/hbPrimaryColor</item>
        <item name="colorPrimaryVariant">@color/hbPrimaryDarkColor</item>
        <item name="colorOnPrimary">#FFFFFF</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/hbSecondaryColor</item>
        <item name="colorSecondaryVariant">@color/hbSecondaryDarkColor</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/hbPrimaryColor</item>

        <!-- Customize your theme here. -->
        <!-- Delete action bar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ProductPriceTheme" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/notosans_kr_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/fontColorLightGray</item>
    </style>

    <style name="CategoryTabTheme" parent="TextAppearance.Design.Tab">
        <item name="fontFamily">@font/notosans_kr_regular</item>
        <item name="android:fontFamily">@font/notosans_kr_regular</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/fontColorGray</item>
    </style>
</resources>