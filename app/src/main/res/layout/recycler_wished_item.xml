<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bgColorWhite"
    android:orientation="vertical"
    android:paddingTop="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/wishedItemImageContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="0dp"
            app:cardCornerRadius="4dp"
            app:cardElevation="0dp"
            app:cardMaxElevation="0dp">

            <ImageView
                android:id="@+id/wishedItemImage"
                android:layout_width="130dp"
                android:layout_height="140dp"
                android:scaleType="fitXY"
                app:srcCompat="@mipmap/ic_launcher" />
        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:id="@+id/wishedItemInfoContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp">

            <TextView
                android:id="@+id/wishedItemName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:fontFamily="@font/notosans_kr_bold"
                android:text="상품이름"
                android:textColor="@color/fontColorBlack"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/wishedItemPriceContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/wishedItemBtnContainer"
                android:layout_below="@id/wishedItemName"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/wishedItemEventPriceContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginRight="6dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/wishedItemEventPercent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginRight="6dp"
                        android:fontFamily="@font/notosans_kr_bold"
                        android:includeFontPadding="false"
                        android:text="0%"
                        android:textColor="@android:color/holo_red_light"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/wishedItemEventPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:fontFamily="@font/notosans_kr_bold"
                        android:includeFontPadding="false"
                        android:text="0"
                        android:textColor="@color/fontColorBlack"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/wishedItemEventPriceSubText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:fontFamily="@font/notosans_kr_regular"
                        android:includeFontPadding="false"
                        android:text="원"
                        android:textColor="@color/fontColorBlack"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/wishedItemOriginalPriceContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/wishedItemPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:fontFamily="@font/notosans_kr_regular"
                        android:includeFontPadding="false"
                        android:text="0"
                        android:textColor="@color/fontColorGray"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/wishedItemOriginalPriceSubText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/notosans_kr_regular"
                        android:includeFontPadding="false"
                        android:text="원"
                        android:textColor="@color/fontColorGray"
                        android:textSize="14sp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/wishedItemBtnContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/wishedDeleteBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notosans_kr_regular"
                    android:includeFontPadding="false"
                    android:text="삭제"
                    android:textColor="@color/fontColorBlack" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/wishedBasketBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/notosans_kr_regular"
                    android:includeFontPadding="false"
                    android:text="장바구니 담기"
                    android:textColor="@color/fontColorBlack" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:background="@color/LineColorLightGray"
        android:orientation="horizontal"></LinearLayout>
</LinearLayout>