<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.update.UpdateActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/updateAppbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/updateToolbar"
            style="@style/Widget.App.Toolbar.Light"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="@drawable/ic_baseline_close_24"
            app:title="업데이트"
            app:titleCentered="true"
            />
    </com.google.android.material.appbar.AppBarLayout>


    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentContainerInUpdateAct"
        android:name="kr.co.younhwan.happybuyer.view.update.nickname.NicknameFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/updateAppbar" />
</RelativeLayout>