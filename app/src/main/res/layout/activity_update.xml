<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.update.UpdateActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/updateToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:minHeight="?attr/actionBarSize" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentContainerInUpdateAct"
        android:name="kr.co.younhwan.happybuyer.view.update.nickname.NicknameFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/updateToolbar" />
</RelativeLayout>