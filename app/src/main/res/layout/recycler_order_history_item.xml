<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bgColorWhite"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/orderHistoryItemIdTitle"
            style="@style/TextView"
            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="주문번호"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/orderHistoryItemId"
            style="@style/NumberTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:includeFontPadding="false"
            android:text="0000000000001"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_baseline_keyboard_arrow_right_24" />
    </LinearLayout>

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/orderHistoryItemNameTitle"
            style="@style/TextView"
            android:layout_width="112dp"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="상품명" />

        <TextView
            android:id="@+id/orderHistoryItemName"
            style="@style/TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:text="떢볶이 외 3건"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/orderHistoryItemDateTitle"
            style="@style/TextView"
            android:layout_width="112dp"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="주문 일시" />

        <TextView
            android:id="@+id/orderHistoryItemDate"
            style="@style/NumberTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:text="2022.03.30 18:00:00"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/orderHistoryItemPaymentTitle"
            style="@style/TextView"
            android:layout_width="112dp"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="결제 방법" />

        <TextView
            android:id="@+id/orderHistoryItemPayment"
            style="@style/TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:text="만나서 카드 결제"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/orderHistoryItemPriceTitle"
            style="@style/TextView"
            android:layout_width="112dp"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="결제 금액" />

        <TextView
            android:id="@+id/orderHistoryItemPrice"
            style="@style/NumberTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:text="0원"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/orderHistoryItemDeliveryStatusTitle"
            style="@style/TextView"
            android:layout_width="112dp"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="주문 상태" />

        <TextView
            android:id="@+id/orderHistoryItemDeliveryStatus"
            style="@style/TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:text="주문접수"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>