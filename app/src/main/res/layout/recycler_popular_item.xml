<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bgColorWhite">

    <androidx.cardview.widget.CardView
        android:id="@+id/popularItemImageContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="0dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/popularItemImage"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:scaleType="fitXY"
            app:srcCompat="@mipmap/ic_launcher" />
    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:id="@+id/popularItemOtherBtnContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/popularItemImageContainer"
        android:paddingLeft="6dp"
        android:paddingTop="6dp"
        android:paddingRight="6dp">

        <RelativeLayout
            android:id="@+id/popularWishedBtnContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@id/popularBasketBtnContainer">

            <ImageView
                android:id="@+id/popularWishedBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/wished_btn_selector"
                app:srcCompat="@drawable/heart" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/popularBasketBtnContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">

            <ImageView
                android:id="@+id/popularBasketBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/shopping_cart" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/popularItemInfoContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/popularItemOtherBtnContainer">

        <TextView
            android:id="@+id/popularItemName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:fontFamily="@font/notosans_kr_regular"
            android:includeFontPadding="false"
            android:text="TextView"
            android:textColor="@color/fontColorBlack" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/popularItemName"
            android:paddingBottom="24dp">

            <TextView
                android:id="@+id/popularItemEventPercent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:fontFamily="@font/notosans_kr_bold"
                android:includeFontPadding="false"
                android:text="0%"
                android:textColor="@android:color/holo_red_light"
                android:textSize="18sp"
                android:textStyle="bold"
                android:visibility="visible" />

            <TextView
                android:id="@+id/popularItemPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/popularItemEventPercent"
                android:fontFamily="@font/notosans_kr_bold"
                android:includeFontPadding="false"
                android:text="TextView"
                android:textColor="@color/fontColorBlack"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/popularItemPrice"
                android:fontFamily="@font/notosans_kr_bold"
                android:includeFontPadding="false"
                android:text="원"
                android:textColor="@color/fontColorBlack"
                android:textSize="18sp" />
        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>