<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:orientation="vertical"
    android:padding="15dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/eventItemImageContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp"
        app:cardMaxElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/itemImage"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:scaleType="fitXY"
                app:srcCompat="@mipmap/ic_launcher" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:id="@+id/otherBtnContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/eventItemImageContainer"
        android:layout_marginTop="5dp">

        <RelativeLayout
            android:id="@+id/wishedBtnContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/basketBtnContainer"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@id/basketBtnContainer">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/wishedBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/wished_btn_selector"
                android:src="@drawable/heart" />

<!--            android:background="@android:color/transparent"-->
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/basketBtnContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/basketBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:src="@drawable/shopping_cart" />
        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/division"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/otherBtnContainer"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="3dp"
        android:background="@color/colorDivision"
        android:orientation="horizontal" />

    <TextView
        android:id="@+id/itemName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/division"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="상품 이름"
        android:textAlignment="viewStart"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/itemPriceContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/itemName"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/itemPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:fontFamily="sans-serif"
            android:text="0"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/itemSubText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:fontFamily="sans-serif-thin"
            android:text="원"
            android:textAlignment="center"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>

    <Space
        android:id="@+id/emptySpace"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@id/itemPriceContainer" />

</RelativeLayout>